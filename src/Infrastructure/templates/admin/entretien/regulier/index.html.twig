{% extends 'layout/dashboard.layout.html.twig' %}
{% block title %}Entretien régulier machine{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/maintenance-table.css') }}">
{% endblock %}

{% block content %}
    <div class="row flex-grow">
        <div class="col-md-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="card-title card-title-dash">Entretien régulier machine</h2>
                        </div>
                        <div>
                            <a href="#" class="btn btn-primary btn-md text-white mb-0 me-0" type="button">
                                <i class="mdi mdi-plus"></i> Ajouter un entretien régulier
                            </a>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-3 alert-animated" role="alert">
                        <i class="mdi mdi-alert-circle"></i>
                        <strong>Attention :</strong> Pour toute activité d'entretien ou de dépannage : machine à l'arrêt et hors tension
                    </div>
                    
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">
                                            <i class="mdi mdi-file-pdf-box text-danger"></i>
                                            Document d'entretien régulier
                                        </h5>
                                        <div class="btn-group" role="group">
                                            <a href="{{ asset('uploads/documents/ELEC ENTRETIEN REGULIER & PONCTUEL250612.pdf') }}"
                                               target="_blank"
                                               class="btn btn-primary btn-sm"
                                               title="Ouvrir dans un nouvel onglet">
                                                <i class="mdi mdi-eye"></i>
                                            </a>
                                            <a href="{{ asset('uploads/documents/ELEC ENTRETIEN REGULIER & PONCTUEL250612.pdf') }}"
                                               download="ELEC ENTRETIEN REGULIER & PONCTUEL250612.pdf"
                                               class="btn btn-success btn-sm"
                                               title="Télécharger le PDF">
                                                <i class="mdi mdi-download"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover maintenance-table" id="maintenanceTable">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Heures</th>
                                                        <th>Vidanger l'huile de la pompe</th>
                                                        <th>Nettoyer filtre à air</th>
                                                        <th>Graisser unité de coupe</th>
                                                        <th>Nettoyer les ailettes et le moteur</th>
                                                        <th>Contrôler pneus et roues</th>
                                                        <th>Faire un nettoyage de la bougie</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="maintenanceTableBody">
                                                    <!-- Le contenu sera généré par JavaScript -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    {{ parent() }}
    <script src="{{ asset('assets/js/maintenance-table.js') }}"></script>
{% endblock %} 