{% extends 'layout/dashboard.layout.html.twig' %}
{% block title %}Activités quotidiennes et hebdomadaires{% endblock %}

{% block content %}
    <style>
        .alert-animated {
            animation: pulse 1s infinite;
        }
        
        @keyframes pulse {
            0% { 
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.7);
            }
            50% { 
                transform: scale(0.98);
                box-shadow: 0 0 0 10px rgba(255, 193, 7, 0);
            }
            100% { 
                transform: scale(1);
                box-shadow: 0 0 0 1px rgba(255, 193, 7, 0);
            }
        }
    </style>
    
    <div class="row flex-grow">
        <div class="col-md-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="card-title card-title-dash">Activités quotidiennes et hebdomadaires</h2>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-3 alert-animated" role="alert">
                        <i class="mdi mdi-alert-circle"></i>
                        <strong>Attention :</strong> Pour toute activité d'entretien ou de dépannage : machine à l'arrêt et hors tension
                    </div>
                    
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">
                                            <i class="mdi mdi-file-pdf-box text-danger"></i>
                                            Document d'entretien électrique - Quotidien & Hebdomadaire
                                        </h5>
                                        <div class="btn-group" role="group">
                                            <a href="{{ asset('uploads/documents/ELEC ENTRETIEN QUOTIDIEN & HEBDO.pdf') }}"
                                               target="_blank"
                                               class="btn btn-primary btn-sm"
                                               title="Ouvrir dans un nouvel onglet">
                                                <i class="mdi mdi-eye"></i>
                                            </a>
                                            <a href="{{ asset('uploads/documents/ELEC ENTRETIEN QUOTIDIEN & HEBDO.pdf') }}"
                                               download="ELEC ENTRETIEN QUOTIDIEN & HEBDO.pdf"
                                               class="btn btn-success btn-sm"
                                               title="Télécharger le PDF">
                                                <i class="mdi mdi-download"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="embed-responsive embed-responsive-16by9 d-none d-md-block">
                                            <iframe class="embed-responsive-item" 
                                                    src="{{ asset('uploads/documents/ELEC ENTRETIEN QUOTIDIEN & HEBDO.pdf') }}#toolbar=1&navpanes=0&scrollbar=1"
                                                    style="border: 1px solid #ddd; border-radius: 8px; min-height: 600px; width: 100%;">
                                                <p>Votre navigateur ne supporte pas l'affichage des PDF. 
                                                <a href="{{ asset('uploads/documents/ELEC ENTRETIEN QUOTIDIEN & HEBDO.pdf') }}" target="_blank">Cliquez ici pour ouvrir le PDF</a></p>
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 