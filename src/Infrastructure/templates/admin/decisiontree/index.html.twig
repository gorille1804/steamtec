{% extends "layout/dashboard.layout.html.twig" %}
{% block title %} {{'decisiontree.index.title'|trans}} {% endblock %}

{% block content %}
    <div class="row flex-grow">
        <div class="col-md-12">
            {% for type, messages in {'success': 'alert-success', 'info': 'alert-primary', 'error': 'alert-danger'} %}
                {% for message in app.flashes(type) %}
                    <div class="alert {{ messages }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="card-title card-title-dash">{{'decisiontree.index.title'|trans}}</h2>
                        </div>
                    </div>
                    <div class="mt-1 row">
                        {% for category in categories %}
                        <div class="col-md-4 col-sm-12">
                            <div class="mb-4 p-3">
                                <h3 class="mb-2 border rounded p-2 text-center">{{ category.name }}</h3>
                                {% set categoryId = category.id.getValue() %}
                                
                                {% if problemTypesByCategory[categoryId] is defined %}
                                    {% for problemType in problemTypesByCategory[categoryId] %}
                                        <p class="border p-2 bg-success text-center">{{ problemType.name }}</p>
                                    {% endfor %}
                                {% else %}
                                    <p>Aucun problème type trouvé pour cette catégorie.</p>
                                {% endif %}
                            </div>
                        </div>
                        {% else %}
                            <div class="alert alert-info">
                                Aucune catégorie trouvée.
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}