{% extends 'layout/dashboard.layout.html.twig' %}
{% block title %} Guides d'utilisation et mise en service{% endblock %}

{% block content %}
    <div class="row flex-grow">
        <div class="col-md-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="card-title card-title-dash">Guides</h2>
                            <p class="card-subtitle card-subtitle-dash">Liste des guides d'utilisation et mise en service disponibles</p>
                        </div>
                    </div>
                    
                    {% if guides is empty %}
                        <div class="mt-1 text-center">
                            <div class="empty-state">
                                <i class="mdi mdi-file-document-outline" style="font-size: 4rem; color: #ccc;"></i>
                                <h4 class="mt-3">Aucun guide disponible</h4>
                                <p class="text-muted">Aucun guide d'utilisation et mise en service n'a été ajouté pour le moment.</p>
                            </div>
                        </div>
                    {% else %}
                        <div class="table-responsive mt-1">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nom du fichier</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for guide in guides %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="mdi mdi-file-pdf-box text-danger me-3" style="font-size: 1.5rem;"></i>
                                                    <div>
                                                        <h6 class="mb-0">{{ guide.filename }}</h6>
                                                        <small class="text-muted">{{ guide.name }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ guide.path }}" target="_blank" class="btn btn-sm btn-outline-primary" title="Voir le guide">
                                                        <i class="mdi mdi-eye"></i>
                                                    </a>
                                                    <a href="{{ guide.path }}" download="{{ guide.name }}" class="btn btn-sm btn-outline-success" title="Télécharger">
                                                        <i class="mdi mdi-download"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="mdi mdi-information-outline"></i>
                                Total : {{ guides|length }} guide{{ guides|length > 1 ? 's' : '' }}
                            </small>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 