{% extends 'layout/dashboard.layout.html.twig' %}
{% block title %}Historique des entretiens{% endblock %}

{% block content %}
    <div class="row flex-grow">
        <div class="col-md-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="card-title card-title-dash">Historique des entretiens</h2>
                            <p class="card-subtitle card-subtitle-dash">Consultez l'historique complet des entretiens effectués</p>
                        </div>
                    </div>
                    
                    {% if entretienLogs is empty %}
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="mdi mdi-information-outline"></i>
                            <strong>Aucun entretien enregistré :</strong> Aucun log d'entretien n'a été trouvé dans l'historique.
                        </div>
                    {% else %}
                        <div class="table-responsive mt-4">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Machine</th>
                                        <th>Numéro d'identification</th>
                                        <th>Volume horaire</th>
                                        <th>Activité</th>
                                        <th>Créé le</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for log in entretienLogs %}
                                        <tr>
                                            <td>
                                                <span class="badge badge-outline-primary">
                                                    {{ log.logDate|date('d/m/Y') }}
                                                </span>
                                            </td>
                                            <td>
                                                <strong>{{ log.parcMachine.machine.nom }}</strong>
                                            </td>
                                            <td>
                                                <code>{{ log.parcMachine.machine.numeroIdentification }}</code>
                                            </td>
                                            <td>
                                                <span class="badge badge-info">
                                                    {{ log.volumeHoraire }}h
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-muted">{{ log.activite }}</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ log.createdAt|date('d/m/Y H:i') }}
                                                </small>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="text-muted">
                                        <i class="mdi mdi-information-outline"></i>
                                        Total : <strong>{{ entretienLogs|length }}</strong> entretien(s) enregistré(s)
                                    </p>
                                </div>
                                <div class="col-md-6 text-end">
                                    <a href="{{ path('app_entretiens_regulier') }}" class="btn btn-outline-primary btn-sm">
                                        <i class="mdi mdi-plus"></i>
                                        Nouvel entretien
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 