{# templates/admin/faq/create_update.html.twig #}
{% extends "layout/dashboard.layout.html.twig" %}
{% block title %}{{ is_edit ? 'FAQs.form.title.update'|trans : 'FAQs.form.title.create'|trans }} {{'FAQs.form.title.title'|trans}}{% endblock %}

{% block content %}
    <div class="row flex-grow">
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="card-title card-title-dash">{{ is_edit ? 'FAQs.form.title.update'|trans : 'FAQs.form.title.create'|trans }} {{'FAQs.form.title.title'|trans}}</h4>
                        </div>
                        <div>
                            <a href="{{ path('app_faqs') }}" class="btn btn-secondary btn-md mb-0 me-0">
                                <i class="mdi mdi-arrow-left"></i> {{'FAQs.form.submit.return'|trans}}
                            </a>
                        </div>
                    </div>
                    <div class="mt-4">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% include "admin/faq/form.html.twig" with {'form': form, 'is_edit': is_edit} %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}