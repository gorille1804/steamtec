{# templates/admin/faq/form.html.twig #}
{{ form_start(form) }}
    <div class="form-group mb-3">
        {{ form_label(form.question) }}
        {{ form_widget(form.question, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.question) %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.question) }}
            </div>
        {% endif %}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.answer) }}
        {{ form_widget(form.answer, {'attr': {'class': 'form-control', 'rows': 5}}) }}
         {% if form_errors(form.answer) %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.answer) }}
            </div>
        {% endif %}
    </div>
    {% if form.isActive is defined %}
    <div class="form-group mb-3">
        <div class="form-check">
            {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
        </div>
        {{ form_errors(form.isActive) }}
    </div>
    {% endif %}
    <div class="mt-4">
        <button type="submit" class="btn btn-primary mr-2">
            {{ is_edit ? 'Mettre à jour' : 'Créer' }}
        </button>
        <a href="{{ path('app_faqs') }}" class="btn btn-light">Annuler</a>
    </div>
{{ form_end(form) }}