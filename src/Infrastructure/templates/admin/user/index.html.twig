{% extends "layout/dashboard.layout.html.twig" %}
{% block title %} Utilisateurs {% endblock %}

{% block content %}
    <div class="row flex-grow">
        <div class="col-md-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="card-title card-title-dash">Utilisateurs</h2>
                        </div>
                        <div>
                            <a  href="{{path('app_users_create')}}" class="btn btn-primary btn-md text-white mb-0 me-0" type="button">
                                <i class="mdi mdi-account-plus"></i> Ajouter un nouveau client
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive mt-1">
                        <table class="table select-table">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>email</th>
                                    <th>société</th>
                                    <th>téléphone</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %} 
                                <tr>
                                    <td>
                                        {{user.firstname ~ ' ' ~ user.lastname}}
                                        {% if app.user.id == user.id %}
                                             <p class="badge badge-opacity-success">vous</p>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{user.email}}
                                    </td>
                                    <td>
                                       {{user.socity}}
                                    </td>
                                    <td>
                                      {{user.phone}}  
                                    </td>
                                    
                                    <td class="py-1">
                                        <div class="btn-group" role="group" aria-label="Basic example">
                                            <a href="{{path('app_users_update', {'userId':user.id})}}" class="btn btn-warning btn-sm" type="button">
                                               <i class="mdi mdi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                class="btn btn-danger btn-sm delete-user-btn" 
                                                title="Supprimer"
                                                {% if app.user.id == user.id %}disabled{% endif %}
                                                data-user-id="{{ user.id }}"
                                                data-user-name="{{ user.firstname ~ ' ' ~ user.lastname }}"
                                                data-csrf-token="{{ csrf_token('delete' ~ user.id) }}">
                                                <i class="mdi mdi-delete"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirmation de suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer l'utilisateur <span id="userName"></span> ?</p>
                    <p class="text-danger">Cette action est irréversible.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form id="deleteForm" method="POST" action="" style="display: inline;">
                        <input type="hidden" name="_token" id="csrfToken" value="">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof jQuery !== 'undefined') {
                $('.delete-user-btn').click(function() {
                    var userId = $(this).data('user-id');
                    var userName = $(this).data('user-name');
                    var csrfToken = $(this).data('csrf-token');
                    $('#userName').text(userName);
                    $('#deleteForm').attr('action', "{{path('app_users_delete', {'userId': 'USERID'})}}".replace('USERID', userId));
                    $('#csrfToken').val(csrfToken);
                    $('#deleteConfirmationModal').modal('show');
                });
                $('.btn-secondary').click(function() {
                    $('#deleteConfirmationModal').modal('hide');
                });
            } else {
                console.error('jQuery is not loaded!');
            }
        });
    </script>
{% endblock %}