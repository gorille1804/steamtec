{% extends "layout/security.layout.html.twig" %}
{% block stylesheets %}
{% endblock %}
{% block content %}
 <div class="col-md-6 login-form">
        <h2 class="mb-4">Login</h2>
        <p class="text-muted mb-4">Welcome back! Please login to your account.</p>
        <form>
            <div class="mb-3">
                <label for="email" class="form-label">User Email</label>
                <input type="email" class="form-control" id="email" placeholder="username@email.com">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" placeholder="••••••••">
            </div>
            <div class="mb-3 d-flex justify-content-between">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="remember">
                    <label class="form-check-label" for="remember">Remember Me</label>
                </div>
                <a href="{{path('app_forgot_password')}}" class="text-decoration-none">Forgot Password?</a>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
        </form>
    </div>
{% endblock %}