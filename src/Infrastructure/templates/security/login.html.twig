{% extends 'layout/security.layout.html.twig' %}

{% block stylesheets %}
    {# Include any additional stylesheets here #}
{% endblock %}

{% block content %}
    <div class="col-md-6 login-form">
        <h2 class="mb-4">Login</h2>
        <p class="text-muted mb-4">Welcome back! Please login to your account.</p>
        {% for flash in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ flash }}
            </div>
        {% endfor %}
        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
            <div class="mt-2">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                {% if form_errors(form.email) %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.email) }}
                    </div>
                {% endif %}
            </div>
            <div class="mt-2">
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
                {% if form_errors(form.password) %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.password) }}
                    </div>
                {% endif %}
            </div>
            <div class="mt-2 mb-3 d-flex justify-content-end">
                <a href="{{ path('app_forgot_password') }}" class="text-decoration-none">Forgot Password?</a>
            </div>
            {{ form_row(form.login) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
