{% extends 'layout/security.layout.html.twig' %}

{% block stylesheets %}
    {# Include any additional stylesheets here #}
{% endblock %}

{% block content %}
    <div class="col-md-6 login-form">
        <h2 class="mb-4">Login</h2>
        <p class="text-muted mb-4">Welcome back! Please login to your account.</p>
        {{ form_start(form) }}
            <div class="mt-2">
                {{ form_row(form.email) }}
            </div>
            <div class="mt-2">
                {{ form_row(form.password) }}
            </div>
            <div class="mt-2 mb-3 d-flex justify-content-end">
                <a href="{{ path('app_forgot_password') }}" class="text-decoration-none">Forgot Password?</a>
            </div>
            {{ form_row(form.login) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
