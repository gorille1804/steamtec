{% extends "layout/security.layout.html.twig" %}
{% block stylesheets %}
{% endblock %}
{% block content %}
 <div class="col-md-6 login-form">
        <h2 class="mb-4">Forgot password ?</h2>
        <p class="text-muted mb-4">Please enter your email address to reset your password.</p>
        {% for flash in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ flash }}
            </div>
        {% endfor %}
        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
        {{form_start(form)}}
            <div class="mb-3">
               {{form_row(form.email)}}
            </div>
             <div class="mb-3 d-flex justify-content-end">
                <a href="{{path('app_security')}}" class="text-decoration-none">Back to login</a>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Reset password</button>
        {{form_end(form)}}
    </div>
{% endblock %}