{% extends "layout/frontend.layout.html.twig" %}
{% block stylesheets %}
{% endblock %}
{% block content %}
 <div class="col-md-6 login-form">
        <h2 class="mb-4">{{'users.forgot_password.title'|trans}}</h2>
        <p class="text-muted mb-4">{{'users.forgot_password.instruction'|trans}}</p>
        {% for flash in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ flash }}
            </div>
        {% endfor %}
        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
        {{form_start(form)}}
            <div class="mb-3">
               {{form_row(form.email)}}
            </div>
             <div class="mb-3 d-flex justify-content-end">
                <a href="{{path('app_security')}}" class="text-decoration-none">{{'users.forgot_password.form.submit.cancel'|trans}}</a>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">{{'users.forgot_password.form.submit.update'|trans}}</button>
        {{form_end(form)}}
    </div>
{% endblock %}