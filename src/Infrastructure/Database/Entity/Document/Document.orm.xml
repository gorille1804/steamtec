<!-- config/doctrine/Chantier.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Domain\Document\Data\Model\Document" table="documents">
        <id name="id" type="documentId" column="id" />
        <field name="name" type="string" length="180" nullable="false"/>
        <field name="uri" type="string" length="180" nullable="false" />
        <field name="size" type="string" length="180" nullable="false" />
        <field name="type" type="string" length="180" nullable="false" />
        <field name="createdAt" type="datetime" />
        </entity>
</doctrine-mapping>